{
  "name": "{{ package_name }}",
  "version": "0.1.0",
  "description": "{{ package_description }}",
  "license": "MIT",
  "author": "{{ author_name }} <{{ author_email }}>",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{{ github_org }}/{{ repo_name }}.git",
    "directory": "packages/{{ package_name }}"
  },
  "homepage": "https://github.com/{{ github_org }}/{{ repo_name }}#readme",
  "bugs": {
    "url": "https://github.com/{{ github_org }}/{{ repo_name }}/issues"
  },
  "keywords": [],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "publint": "publint",
    "prepack": "pnpm build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^22.19.7",
    "@vitest/coverage-v8": "^4.0.18",
    "publint": "^0.3.17",
    "tsdown": "^0.20.3",
    "vitest": "^4.0.18"
  }
}
